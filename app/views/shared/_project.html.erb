<%unless @user.microposts.nil?%>
    <%@user.microposts.each do |project|%>
    <div class="col-lg-6">
        <div class="card card-project">

            <%# <div class="progress">
                <div class="progress-bar bg-danger" role="progressbar" style="width: 60%" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
            </div> %>
            
            <div class="card-body">
                <div class="dropdown card-options">
                    <button class="btn-options" type="button" id="project-dropdown-button-1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="material-icons">more_vert</i>
                    </button>
                    <%if project.user_id == current_user.id%>
                        <div class="dropdown-menu dropdown-menu-right">
                            <%# <%byebug%>
                            
                            <%= link_to "Delete", project_destroy_url(:id => project.id), class:"dropdown-item"%>
                            <%# <a class="dropdown-item" href="#">Delete</a> %>
                            <%# <a class="dropdown-item" href="#">Share</a> %>
                        </div>
                    <%end%>
                </div>
                <div class="card-title">
                    <a href="#">
                        <%= link_to project do %>
                                                                
                        <h5 data-filter-by="text"><%= project.name%></h5>
                    <%end %>
                        
                    </a>
                </div>
                <p class="card-text"><%=project.content%></p>
                
                <ul class="avatars">
                <%project.users.each do |u| %>
                    <li>
                        <%= link_to u, data_toggle:"tooltip", title: u.first_name do%>
                        <%unless u.picture.nil?%>
                            <%unless u.picture.url.nil?%>
                                <%= image_tag u.picture.url, class: "avatar", alt: u.first_name, data_filter_by: "alt"%>
                            <%else%>
                                <%= image_tag "/avatar.png", class: "avatar", alt: u.first_name, data_filter_by: "alt"%>
                            <%end%>
                        <%else%>
                        <%# <a href="#" data-toggle="tooltip" title="Kenny"> %>
                            <%= image_tag "/avatar.png", class: "avatar", alt:u.first_name, data_filter_by: "alt"%>
                            <%# <img alt="Kenny Tran" class="avatar" src="pages/assets/img/avatar-male-6.jpg" data-filter-by="alt" > %>
                        </a>
                            <%end%>
                        
                        <%# <%else%>
                            <%# <%= img "/avatar", class: "avatar", data_filter_by: "alt"%>
                        <%# <%end%>
                        <%end%>
                    </li>

                <%end %>
                </ul>
                
                
            </div>
        </div>
    </div>
    <%end%>
<%end%>