<% provide(:title, 'Edit') %>
<h1>My Information</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :campus %>
      <%= f.text_field :campus, class: 'form-control' %>

      <%= f.label :position %>
      <%= f.text_field :position, class: 'form-control', placeholder: 'Student, Teacher, or Faculty' %>

      <%= f.label :major %>
      <%= f.text_field :major, class: 'form-control' %>

      <%= f.label :minor %>
      <%= f.text_field :minor, class: 'form-control' %>

      <%= f.label :year, "Graduation Year" %>
      <%= f.text_field :year, class: 'form-control' %>

      <%= f.label :interests %>
      <%= f.text_field :interests, class: 'form-control' %>

      <%= f.label :internships %>
      <%= f.text_field :internships, placeholder: 'Google', class: 'form-control' %>

      <%= f.label :connections %>
      <%= f.text_field :connections, placeholder: 'Argentinian Bankers', class: 'form-control' %>

      <%= f.label :technical %>
      <%= f.text_field :technical, placeholder: 'Ruby on Rails', class: 'form-control' %>

      <%= f.label :spoken_languages %>
      <%= f.text_field :spoken_languages, placeholder: 'Dutch',  class: 'form-control' %>

      <%= f.label :other %>
      <%= f.text_field :other, placeholder: 'I made a short YouTube video!', class: 'form-control' %>


      <%= f.submit "Submit", class: "btn btn-primary" %>
      <%end%>
    </div>
  </div>