<body>
    <div class="main-container fullscreen">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-5 col-lg-6 col-md-7">
                    <div class="text-center">
                        <h1 class="h2">Create account</h1>
                        <p class="lead">Start doing awesome things, in an instant</p>
                        <hr>
                        <%# <form> %>
                            <div class="form-group">
                            <%= form_for(@user) do |f| %>
                            <%= render 'shared/error_messages', object: f.object %>
                                <%= f.email_field :email, class: 'form-control', type: "email", placeholder: "Email Address" %>
                            </div>
                            <div class="form-group">
                              <%= f.text_field :first_name, class: 'form-control',  type: "text", placeholder: "First Name"%>
                                      <%# <input class="form-control" type="email" placeholder="Email Address" name="login-email" /> %>
                            </div>
                            <div class="form-group">
                              <%= f.text_field :last_name, class: 'form-control',  type: "text", placeholder: "Last Name"%>
                                      <%# <input class="form-control" type="email" placeholder="Email Address" name="login-email" /> %>
                            </div>
                            <div class="form-group">
                                <%= f.password_field :password, class: 'form-control', type:"password", placeholder: "Password"%>
                            </div>
                            <div class="form-group">
                                <%= f.password_field :password_confirmation, class: 'form-control', type:"password", placeholder: "Password Confirmation"%>
                                <div class="text-left">
                                    <small>Your password should be at least 8 characters</small>
                                </div>
                            </div>
                            <%= f.submit "Create account", class: "btn btn-lg btn-block btn-primary"%>
                            <%# <button class="btn btn-lg btn-block btn-primary" role="button" type="submit"> %>
                                <%# Create account %>
                            <%# </button> %>
                            <%end%>
                            <small>By clicking 'Create Account' you agree to our <a href="#">Terms of Use</a>
                            </small>
                        <%# </form> %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
